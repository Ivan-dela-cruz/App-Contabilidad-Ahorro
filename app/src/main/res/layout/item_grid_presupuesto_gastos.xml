<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/car_encabezado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/img_cat_gasto_cate_presupuesto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="4dp"
                android:src="@drawable/ingreso" />

            <TextView
                android:id="@+id/txt_cat_nombre_cate_presupuesto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="11dp" />
            <TextView
                android:id="@+id/txt_presupuesto_item"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="11dp"
                android:gravity="center"
                android:background="#fff333"
                android:text="1111"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>