<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tools.ToolsitemGastoActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_gasto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="5dp"
        tools:layout_editor_absoluteX="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@color/md_blue_100"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/ic_border_color_black_24dp" />

                <TextView
                    android:id="@+id/text_position"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Gastos / Lunes 11 de noviembre"
                    android:textAlignment="center"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/txt_edit_cat_gasto_imagen"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_border_color_black_24dp" />

                <Button
                    android:id="@+id/btn_elije_edit_gasto"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/colorPrimary"
                    android:text="..."
                    android:textAlignment="gravity"
                    android:textColor="#FFF"
                    android:textSize="16dp" />

                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center|start"
                    android:text="Nombre:"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/txt_edit_cat_gasto_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="12dp"
                    android:maxLength="20"
                    android:gravity="bottom" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center|start"
                    android:text="Presupuesto:"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/txt_edit_cat_gasto_presupuesto"
                    android:layout_width="match_parent"
                    android:textSize="12dp"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:layout_height="40dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center|start"
                    android:text="Estado:"
                    android:textSize="12dp" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/txt_edit_cat_gasto_estado"
                    android:textOff="No"
                    android:textOn="Yes"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_edit_cate_gasto_acutualizar"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:background="@drawable/buttonblue"
                    android:gravity="center"
                    android:text="Actualizar"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlanco"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/btn_edit_cate_gasto_eliminar"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/buttonred"
                    android:gravity="center"
                    android:text="Eliminar"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlanco"

                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>