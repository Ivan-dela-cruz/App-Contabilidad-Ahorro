<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_item_lista_presupuesto_gasto"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:padding="1dp"
        android:src="@drawable/car" />

    <TextView
        android:id="@+id/txt_nombre_item_presupuesto_gasto"
        android:layout_width="222dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/txt_valor_item_presupuesto_gasto"
        android:layout_toEndOf="@+id/img_item_lista_presupuesto_gasto"
        android:gravity="start|center"
        android:paddingLeft="10dp"
        android:text="Nombre"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/txt_valor_item_presupuesto_gasto"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:gravity="start|center"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:text="0.00" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/txt_nombre_item_presupuesto_gasto"
        android:layout_marginTop="10dp"
        android:background="@color/colorBlancoTrasparente" />

</RelativeLayout>
