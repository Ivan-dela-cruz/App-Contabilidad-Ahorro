<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.Home_Ingresos_Activity">


    <ScrollView
        android:id="@+id/scroll_ingresos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/secion_number"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:fillViewport="true">

        <GridView
            android:id="@+id/grid_ingresos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="100dp"
            android:gravity="center"
            android:numColumns="4" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/secion_number"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_grey_500" />

                <LinearLayout
                    android:id="@+id/layout_cat_ingresos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/txt_describ_ingreso"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="false"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:hint="DescripciÃ³n"
                        android:inputType="text"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/txt_valor_ingresos"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text=""
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btn_guardar_ingreso"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:adjustViewBounds="true"
                        android:background="@color/md_grey_200"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_salvar" />

                </LinearLayout>


                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="2dp"
                    android:columnCount="5"
                    android:rowCount="6">

                    <Button
                        android:id="@+id/number_7"
                        style="@style/FuntionalButtons"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:text="7" />

                    <Button

                        android:id="@+id/numbre_8"
                        style="@style/FuntionalButtons"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:text="8" />

                    <Button

                        android:id="@+id/number_9"
                        style="@style/FuntionalButtons"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:text="9" />

                    <Button
                        android:id="@+id/btn_fecha"
                        style="@style/FuntionalButtons"
                        android:layout_row="0"
                        android:layout_column="3"
                        android:layout_marginTop="-3dp"
                        android:layout_marginRight="2dp"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:textSize="9dp"
                        android:textStyle="normal" />


                    <Button
                        android:id="@+id/number_4"
                        style="@style/FuntionalButtons"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:text="4" />

                    <Button
                        android:id="@+id/numbre_5"
                        style="@style/FuntionalButtons"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:text="5" />

                    <Button
                        android:id="@+id/number_6"
                        style="@style/FuntionalButtons"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:text="6" />

                    <Button
                        android:id="@+id/btn_mas"
                        style="@style/FuntionalButtons"
                        android:layout_row="1"
                        android:layout_column="3"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:text="+" />


                    <Button
                        android:id="@+id/number_1"
                        style="@style/FuntionalButtons"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:text="1" />

                    <Button
                        android:id="@+id/numbre_2"
                        style="@style/FuntionalButtons"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:text="2" />

                    <Button
                        android:id="@+id/number_3"
                        style="@style/FuntionalButtons"
                        android:layout_row="2"
                        android:layout_column="2"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:text="3" />

                    <Button
                        android:id="@+id/btn_menos"
                        style="@style/FuntionalButtons"
                        android:layout_row="2"
                        android:layout_column="3"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:text="-" />


                    <Button
                        android:id="@+id/number_punto"
                        style="@style/FuntionalButtons"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:text="." />

                    <Button
                        android:id="@+id/numbre_0"
                        style="@style/FuntionalButtons"
                        android:layout_row="3"
                        android:layout_column="1"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:text="0" />

                    <Button
                        android:id="@+id/btn_clear"
                        style="@style/FuntionalButtons"
                        android:layout_row="3"
                        android:layout_column="2"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:text="C" />

                    <ImageView
                        android:id="@+id/img_ingreso_elejido"
                        style="@style/FuntionalButtons"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_row="3"
                        android:layout_column="3"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@mipmap/ic_carrito" />


                </GridLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_ingresos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/scroll_ingresos"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"

        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_add_black_24dp" />

</RelativeLayout>