<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.ui.main.EditProfileActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_gasto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="5dp"
        tools:layout_editor_absoluteX="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@color/md_blue_100"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/ic_border_color_black_24dp" />

                <TextView
                    android:id="@+id/text_position"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Editar Usuario"
                    android:textAlignment="center"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/txt_edit_user_imagen"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_border_color_black_24dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center|bottom"
                    android:text="Nombre:"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/txt_edit_user_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="12dp"
                    android:maxLength="20"
                    android:gravity="bottom" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center|bottom"
                    android:text="Apellido:"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/txt_edit_user_apellido"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="12dp"
                    android:maxLength="20"
                    android:gravity="bottom" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center|bottom"
                    android:text="GÃ©nero:"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/txt_edit_user_genero"
                    android:layout_width="match_parent"
                    android:textSize="12dp"
                    android:inputType="text"
                    android:maxLength="10"
                    android:layout_height="40dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center|bottom"
                    android:text="Fecha:"
                    android:textSize="12dp" />

                <EditText
                    android:focusable="false"
                    android:id="@+id/txt_edit_user_fecha"
                    android:layout_width="match_parent"
                    android:textSize="12dp"
                    android:maxLength="10"
                    android:layout_height="40dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_edit_user_acutualizar"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:background="@drawable/buttonblue"
                    android:gravity="center"
                    android:text="Actualizar"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlanco"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/btn_edit_user_eliminar"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/buttonred"
                    android:gravity="center"
                    android:text="Cancelar"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlanco"

                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>