<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/car_encabezado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="165dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mes_selected"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@color/md_grey_100"
                    android:gravity="center"
                    android:text="Septiembre"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/hide_calendar"
                    style="@style/SelectedCalendar"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@color/md_grey_200"
                    android:src="@drawable/ic_arriba_less_black_24dp"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/show_calendar"
                    style="@style/SelectedCalendar"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@color/md_grey_200"
                    android:src="@drawable/ic_abajo_more_black_24dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/secion_meses"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/btn_menos_anio"
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:background="@color/colorBlanco"
                                android:src="@drawable/ic_left_black_24dp" />

                            <TextView
                                android:id="@+id/txt_anio"
                                android:layout_width="160dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="2019"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/btn_mas_anio"
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:background="@color/colorBlanco"
                                android:src="@drawable/ic_right_black_24dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <GridLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_margin="2dp"
                                android:columnCount="4"
                                android:rowCount="4">

                                <Button
                                    android:id="@+id/btn_enero"
                                    style="@style/CalendarButtons"
                                    android:layout_row="0"
                                    android:layout_column="0"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="2dp"
                                    android:adjustViewBounds="true"
                                    android:clickable="true"
                                    android:text="Ene." />

                                <Button

                                    android:id="@+id/btn_febrero"
                                    style="@style/CalendarButtons"
                                    android:layout_row="0"
                                    android:layout_column="1"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="2dp"
                                    android:adjustViewBounds="true"
                                    android:clickable="true"
                                    android:text="Feb." />

                                <Button

                                    android:id="@+id/btn_marzo"
                                    style="@style/CalendarButtons"
                                    android:layout_row="0"
                                    android:layout_column="2"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="2dp"
                                    android:adjustViewBounds="true"
                                    android:clickable="true"
                                    android:text="Mar." />

                                <Button

                                    android:id="@+id/btn_abril"
                                    style="@style/CalendarButtons"
                                    android:layout_row="0"
                                    android:layout_column="3"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="2dp"
                                    android:adjustViewBounds="true"
                                    android:clickable="true"
                                    android:text="Abri." />


                                <Button
                                    android:id="@+id/btn_mayo"
                                    style="@style/CalendarButtons"
                                    android:layout_row="1"
                                    android:layout_column="0"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="2dp"
                                    android:adjustViewBounds="true"
                                    android:clickable="true"
                                    android:text="May." />

                                <Button
                                    android:id="@+id/btn_junio"
                                    style="@style/CalendarButtons"
                                    android:layout_row="1"
                                    android:layout_column="1"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="2dp"
                                    android:adjustViewBounds="true"
                                    android:clickable="true"
                                    android:text="Jun." />

                                <Button
                                    android:id="@+id/btn_julio"
                                    style="@style/CalendarButtons"
                                    android:layout_row="1"
                                    android:layout_column="2"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="2dp"
                                    android:adjustViewBounds="true"
                                    android:clickable="true"
                                    android:text="Jul." />

                                <Button
                                    android:id="@+id/btn_agosto"
                                    style="@style/CalendarButtons"
                                    android:layout_row="1"
                                    android:layout_column="3"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="2dp"
                                    android:adjustViewBounds="true"
                                    android:clickable="true"
                                    android:text="Ago." />


                                <Button
                                    android:id="@+id/btn_septiembre"
                                    style="@style/CalendarButtons"
                                    android:layout_row="2"
                                    android:layout_column="0"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="2dp"
                                    android:adjustViewBounds="true"
                                    android:clickable="true"
                                    android:text="Sep." />

                                <Button
                                    android:id="@+id/btn_octubre"
                                    style="@style/CalendarButtons"
                                    android:layout_row="2"
                                    android:layout_column="1"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="2dp"
                                    android:adjustViewBounds="true"
                                    android:clickable="true"
                                    android:text="Oct." />

                                <Button
                                    android:id="@+id/btn_noviembre"
                                    style="@style/CalendarButtons"
                                    android:layout_row="2"
                                    android:layout_column="2"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="2dp"
                                    android:adjustViewBounds="true"
                                    android:clickable="true"
                                    android:text="Nov." />

                                <Button
                                    android:id="@+id/btn_diciembre"
                                    style="@style/CalendarButtons"
                                    android:layout_row="2"
                                    android:layout_column="3"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="2dp"
                                    android:adjustViewBounds="true"
                                    android:clickable="true"
                                    android:text="Dic." />
                            </GridLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/md_grey_300" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/btn_ingresos"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:adjustViewBounds="true"
                                android:padding="2dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/ingreso" />


                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="Ingresos"
                                android:textAlignment="center"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_total_ingresos_home"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="$700,50"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/btn_next_gasto"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:adjustViewBounds="true"
                                android:padding="2dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@mipmap/ic_carrito" />


                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="Gastos"
                                android:textAlignment="center"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_total_gastos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="$400,43"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/imageButton4"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:adjustViewBounds="true"
                                android:padding="2dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/libro" />

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="Saldo"
                                android:textAlignment="center"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_total_saldo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="$300,44"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/car_encabezado"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_gasto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@color/md_blue_100"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_search_black_24dp" />

                    <TextView
                        android:id="@+id/text_home_titulo_gastos"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="Gastos / Lunes 11 de noviembre"
                        android:textAlignment="center"
                        android:textSize="14dp" />
                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_home_gastos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="42dp"
                    android:layout_marginBottom="1dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:id="@+id/cardview_gasto2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/cardview_gasto"
                android:layout_marginStart="5dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="5dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@color/md_blue_100"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_search_black_24dp" />
                    <TextView
                        android:id="@+id/text_home_titulo_ingresos"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="Ingresos / Lunes 11 de noviembre"
                        android:textAlignment="center"
                        android:textSize="14dp" />
                </LinearLayout>



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_home_ingresos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="42dp"
                    android:layout_marginBottom="1dp" />

            </androidx.cardview.widget.CardView>


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>