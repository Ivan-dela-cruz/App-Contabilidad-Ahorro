<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FuntionalButtons">
        <item name="android:textSize">20dp</item>
        <item name="android:minHeight">55dp</item>

        <item name="android:textColor">@color/colorFuncButtonText</item>
        <item name="android:background">@drawable/func_round_tectangule_buttons</item>
    </style>
    <style name="CalendarButtons">
        <item name="android:textSize">13dp</item>
        <item name="android:minHeight">30dp</item>

        <item name="android:textColor">@color/colorFuncButtonText</item>
        <item name="android:background">@drawable/func_round_tectangule_buttons</item>
    </style>

    <style name="SelectedCalendar">
        <item name="android:minHeight">40dp</item>

        <item name="android:textColor">@color/colorFuncButtonText</item>
        <item name="android:background">@drawable/func_round_tectangule_buttons</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="menu_labels_style">
        <item name="android:background">@drawable/label_style</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
